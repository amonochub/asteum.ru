{
  "name": "asteum-backend",
  "version": "1.0.0",
  "description": "Asteum Process Flow Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "api",
    "backend",
    "express",
    "typescript"
  ],
  "author": "Asteum",
  "license": "MIT",
  "dependencies": {
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "better-sqlite3": "^11.5.0",
    "zod": "^3.23.8",
    "dotenv": "^16.4.5",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/better-sqlite3": "^7.6.11",
    "@types/uuid": "^10.0.0",
    "@types/node": "^20.14.10",
    "typescript": "^5.5.3",
    "tsx": "^4.16.2",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "vitest": "^2.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
